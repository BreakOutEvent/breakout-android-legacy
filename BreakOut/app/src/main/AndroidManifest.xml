<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.break_out.breakout">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.WAKE_LOCK"/>
    <uses-permission-sdk-23 android:name="android.permission.ACCESS_FINE_LOCATION"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <!-- SugarORM configuration -->
        <meta-data android:name="DATABASE" android:value="breakout.db" />
        <meta-data android:name="VERSION" android:value="1" />
        <meta-data android:name="QUERY_LOG" android:value="false" />
        <meta-data android:name="DOMAIN_PACKAGE_NAME" android:value="org.break_out.breakout" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SetIntervalActivity"/>
        <receiver android:name=".manager.BOLocationManager$BOLocationBroadcastReceiver">
            <intent-filter>
                <action android:name="breakout.intent.action.locationService"/>
            </intent-filter>
        </receiver>

        <receiver android:name=".MainActivity$LocationListUpdateBroadcastReceiver">
            <intent-filter>
                <action android:name="breakout.intent.action.updateLocation" />
            </intent-filter>
        </receiver>
        <service android:name=".LocationService">

        </service>
    </application>

</manifest>
