<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_relativeLayout_mainWrapper"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_login_600dp">

    <RelativeLayout
        android:id="@+id/start_relativeLayout_contentWrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="28dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="64dp">

        <RelativeLayout
            android:id="@+id/start_relativeLayout_logoWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/start_imageView_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/logo_login"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_relativeLayout_popupWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/start_relativeLayout_logoWrapper"
            android:paddingTop="@dimen/popup_vertical_margin"
            android:paddingBottom="@dimen/popup_vertical_margin"
            android:paddingLeft="@dimen/popup_horizontal_margin"
            android:paddingRight="@dimen/popup_horizontal_margin"
            android:visibility="invisible"
            android:background="@drawable/popover_login_white">
            <TextView
                android:id="@+id/start_textView_popupText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/popup_usernamePassword"
                android:gravity="center"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/start_relativeLayout_loginInputWrapper"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:layout_below="@id/start_relativeLayout_popupWrapper">

            <EditText
                android:id="@+id/start_editText_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_email"
                android:textColor="@color/white"
                android:textColorHint="@color/white_transparent"
                android:theme="@style/AppTheme.EditText"
                android:drawableLeft="@drawable/ic_mail_outline_white_24dp"
                android:inputType="textEmailAddress"/>

            <EditText
                android:id="@+id/start_editText_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:textColor="@color/white"
                android:textColorHint="@color/white_transparent"
                android:layout_below="@+id/start_editText_email"
                android:theme="@style/AppTheme.EditText"
                android:drawableLeft="@drawable/ic_lock_outline_white_24dp"
                android:inputType="textPassword"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="40dp"
            android:layout_below="@+id/start_relativeLayout_loginInputWrapper"
            android:layout_alignParentBottom="true">
            <Button
                android:id="@+id/start_button_logIn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/button_login"
                android:textColor="@color/white"
                android:background="@drawable/btn_rounded_orange_50dp"/>

            <Button
                android:id="@+id/start_button_register"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/start_button_logIn"
                android:text="@string/button_register"
                android:layout_marginTop="25dp"
                android:background="@drawable/btn_rounded_white_50dp"/>

            <TextView
                android:id="@+id/start_textView_about"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:text="@string/textview_about"/>
    </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>