<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/start_relativeLayout_contentWrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="28dp"
    android:paddingTop="28dp">

    <org.break_out.breakout.ui.views.BOEditText
        android:id="@+id/start_editText_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/hint_email"
        android:typeface="normal"
        android:inputType="textEmailAddress"
        app:darkMode="true"
        app:drawableLeft="@drawable/ic_mail_outline_white_24dp"/>

    <org.break_out.breakout.ui.views.BOEditText
        android:id="@+id/start_editText_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:hint="@string/hint_password"
        android:typeface="normal"
        android:inputType="textPassword"
        app:darkMode="true"
        app:drawableLeft="@drawable/ic_lock_outline_white_24dp"/>

    <org.break_out.breakout.ui.views.BOFlatButton
        android:id="@+id/start_button_logIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/button_login"
        app:buttonColor="orange"/>

    <org.break_out.breakout.ui.views.BOFlatButton
        android:id="@+id/start_button_register"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:text="@string/button_start_register"
        app:buttonColor="white"/>

    <TextView
        android:id="@+id/tv_what_is_breakout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:padding="5dp"
        android:text="@string/textview_about"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"/>

</LinearLayout>