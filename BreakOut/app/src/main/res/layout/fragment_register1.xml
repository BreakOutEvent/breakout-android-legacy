<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <ImageView
        android:id="@+id/register_f1_imageView_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/logo_login"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black_transparent"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_below="@+id/register_f1_imageView_logo">

        <LinearLayout
            android:id="@+id/register_f1_linearLayout_userInput1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/register_f1_button_goOn"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_f1_editText_firstname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_firstname"
                android:inputType="textCapWords"
                android:theme="@style/AppTheme.EditText"/>
            <EditText
                android:id="@+id/register_f1_editText_lastname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_lastname"
                android:inputType="textCapWords"
                android:theme="@style/AppTheme.EditText"/>
            <EditText
                android:id="@+id/register_f1_editText_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_email"
                android:inputType="textEmailAddress"
                android:theme="@style/AppTheme.EditText"/>
            <EditText
                android:id="@+id/register_f1_editText_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_password"
                android:inputType="textPassword"
                android:theme="@style/AppTheme.EditText"/>
            <EditText
                android:id="@+id/register_f1_editText_passwordRepeat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/hint_repeatPassword"
                android:inputType="textPassword"
                android:theme="@style/AppTheme.EditText"/>
        </LinearLayout>
        <Button
            android:id="@+id/register_f1_button_goOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_rounded_orange_50dp"
            android:text="@string/button_register"
            android:textColor="@color/white"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>
</RelativeLayout>