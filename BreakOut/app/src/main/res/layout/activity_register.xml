<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/start_relativeLayout_contentWrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/et_last_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:layout_marginRight="5dp"
            android:layout_weight="5"
            android:drawableLeft="@drawable/ic_person_white_24dp"
            android:drawablePadding="10dp"
            android:drawableStart="@drawable/ic_person_white_24dp"
            android:hint="@string/hint_lastname"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textCapWords"
            android:textColor="@color/white"
            android:textColorHint="@color/white_transparent"
            android:theme="@style/AppTheme.EditText"/>

        <EditText
            android:id="@+id/et_first_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:hint="@string/hint_firstname"
            android:imeOptions="flagNoExtractUi"
            android:inputType="textCapWords"
            android:textColor="@color/white"
            android:textColorHint="@color/white_transparent"
            android:theme="@style/AppTheme.EditText"/>

    </LinearLayout>

    <EditText
        android:id="@+id/et_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_mail_outline_white_24dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_mail_outline_white_24dp"
        android:hint="@string/hint_email"
        android:imeOptions="flagNoExtractUi"
        android:inputType="textEmailAddress"
        android:textColor="@color/white"
        android:textColorHint="@color/white_transparent"
        android:theme="@style/AppTheme.EditText"/>

    <org.break_out.breakout.ui.views.BOSpinner
        android:id="@+id/sp_gender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/gender_array"
        app:drawableLeft="@drawable/ic_wc_white_24dp"
        app:drawableRight="@drawable/ic_help_outline_white_24dp"/>

    <org.break_out.breakout.ui.views.BOSpinner
        android:id="@+id/sp_t_shirt_size"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:entries="@array/t_shirt_size_array"
        app:drawableLeft="@drawable/ic_tshirt_white_24dp"
        app:drawableRight="@drawable/ic_help_outline_white_24dp"/>

    <EditText
        android:id="@+id/et_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_phone_white_24dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_phone_white_24dp"
        android:hint="@string/hint_phone_number"
        android:imeOptions="flagNoExtractUi"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/white_transparent"
        android:theme="@style/AppTheme.EditText"/>

    <EditText
        android:id="@+id/et_emergency_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableLeft="@drawable/ic_sos_white_24dp"
        android:drawablePadding="10dp"
        android:drawableStart="@drawable/ic_sos_white_24dp"
        android:hint="@string/hint_emergency_number"
        android:imeOptions="flagNoExtractUi"
        android:inputType="phone"
        android:textColor="@color/white"
        android:textColorHint="@color/white_transparent"
        android:theme="@style/AppTheme.EditText"/>

    <org.break_out.breakout.ui.views.BODatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/hint_birthday"
        app:drawableLeft="@drawable/ic_cake_white_24dp"
        app:drawableRight="@drawable/ic_help_outline_white_24dp"/>

    <Button
        android:id="@+id/bt_participate"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:background="@drawable/btn_rounded_orange_50dp"
        android:foreground="?android:attr/selectableItemBackground"
        android:text="@string/button_participate"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/explanation_participate"
        android:textColor="@color/white"/>

</LinearLayout>
